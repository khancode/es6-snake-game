{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": 2,
        "quotes": [2, "single", { "avoidEscape": true }],
        "indent": ["error", 4]
    },
    "env": {
        "browser": true
    }
}